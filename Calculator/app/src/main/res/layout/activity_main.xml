<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="helloworld.advprog.mmu.ac.uk.calculator.MainActivity">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberInput"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:id="@+id/plusButton"
        android:minWidth="50dip"
        android:onClick="equation_onClick" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/plusButton"
        android:layout_toEndOf="@+id/plusButton"
        android:id="@+id/minusButton"
        android:minWidth="50dip"
        android:onClick="equation_onClick" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minusButton"
        android:layout_toEndOf="@+id/minusButton"
        android:id="@+id/divideButton"
        android:minWidth="50dip"
        android:onClick="equation_onClick" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divideButton"
        android:layout_toEndOf="@+id/divideButton"
        android:id="@+id/button5"
        android:minWidth="50dip" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divideButton"
        android:layout_toEndOf="@+id/divideButton"
        android:id="@+id/button4"
        android:minWidth="50dip" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divideButton"
        android:layout_toEndOf="@+id/divideButton"
        android:id="@+id/button3"
        android:minWidth="50dip" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divideButton"
        android:layout_toEndOf="@+id/divideButton"
        android:id="@+id/button2"
        android:minWidth="50dip" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divideButton"
        android:layout_toEndOf="@+id/divideButton"
        android:id="@+id/button"
        android:minWidth="50dip" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divideButton"
        android:layout_toEndOf="@+id/divideButton"
        android:id="@+id/timesButton"
        android:minWidth="50dip"
        android:onClick="equation_onClick" />

    <Button
        android:text="Equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/timesButton"
        android:layout_toEndOf="@+id/timesButton"
        android:layout_marginStart="17dp"
        android:id="@+id/equalsButton"
        android:onClick="equals_onClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/numberInput"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/plusButton"
        android:onClick="onClick" />
</RelativeLayout>
